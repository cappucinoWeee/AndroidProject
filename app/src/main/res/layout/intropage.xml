<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-200dp"
        app:srcCompat="@drawable/ellipse1" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-124dp"
        android:layout_marginEnd="56dp"
        app:srcCompat="@drawable/ellipse" />

    <Button
        android:id="@+id/intro_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="107dp"
        android:backgroundTint="#B10BFD"
        android:text="Программалау деген не ?" />

    <Button
        android:id="@+id/python_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="424dp"
        android:backgroundTint="#B00BFC"
        android:text="Менің алғашқы кодым" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-18dp"
        android:layout_marginBottom="-4dp"
        app:srcCompat="@drawable/nini" />



</RelativeLayout>