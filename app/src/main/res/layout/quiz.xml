<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lblue"
    android:gravity="center">

    <TextView
        android:id="@+id/questAttempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="579dp"
        android:gravity="center"
        android:text="Number of questions"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:gravity="center"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOpt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#538DE7"
            android:text="Option 1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnOpt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#538CE6"
            android:text="Option 2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnOpt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#538CE6"
            android:text="Option 3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnOpt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#538BE5"
            android:text="Option 4"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="180dp"
        android:layout_height="249dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="518dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-36dp"
        app:srcCompat="@drawable/tityy" />


</RelativeLayout>